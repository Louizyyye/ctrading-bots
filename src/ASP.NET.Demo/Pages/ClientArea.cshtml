@page
@model ASP.NET.Demo.Pages.ClientAreaModel
@{
}

<div>
    <div class="row no-gutters">
        <div class="col-10"></div>
        <div class="col d-grid gap-1">
            <div class="row">
                <select id="accounts-list" class="form-select">
                    @foreach (var account in Model.Accounts)
                    {
                        <option value="@account.TraderLogin" id="@account.CtidTraderAccountId">@account.TraderLogin</option>
                    }
                </select>
            </div>
            <div class="row table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-hover table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Bid</th>
                            <th scope="col">Ask</th>
                        </tr>
                    </thead>
                    <tbody id="symbols-table-body" />
                </table>
            </div>
            <div id="toasts-container" aria-live="polite" aria-atomic="true" class="d-flex flex-column flex-wrap justify-content-start align-items-start" style="position: absolute; bottom: 0; right: 0;">
            </div>
        </div>
    </div>
    <div class="row no-gutters">
    </div>
</div>

<div class="modal fade" id="accountLoadingModal" tabindex="-1" role="dialog" aria-labelledby="accountLoadingModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="accountLoadingModalTitle">Loading Account Data</h5>
            </div>
            <div class="modal-body">
                <p>Please wait...</p>
            </div>
        </div>
    </div>
</div>

<template id="toast-template">
    <div class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="rounded me-2" id="toast-icon"></i>
            <strong class="me-auto" id="toast-title"></strong>
            <small id="toast-title-small"></small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" />
    </div>
</template>

<script src="~/js/trading-accounts.js" asp-append-version="true"></script>
<script src="~/js/api-errors.js" asp-append-version="true"></script>